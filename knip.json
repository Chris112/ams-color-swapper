{
  "$schema": "https://unpkg.com/knip@5/schema.json",
  "entry": ["src/app.ts", "src/workers/**/*.ts"],
  "project": ["src/**/*.ts", "src/**/*.tsx"],
  "ignore": [
    "**/*.test.ts",
    "**/*.spec.ts",
    "**/__tests__/**",
    "**/*.d.ts",
    "dist/**",
    "node_modules/**"
  ],
  "ignoreDependencies": ["@types/node", "vite"],
  "ignoreExportsUsedInFile": true,
  "includeEntryExports": false,
  "workspaces": {
    "src/workers": {
      "entry": ["**/*.ts"]
    }
  }
}
