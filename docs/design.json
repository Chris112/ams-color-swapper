        "family": "JetBrains Mono, Monaco, Consolas",
        "type": "Monospace",
        "usage": "Code, technical data, layer numbers"
      },
      "hierarchy": {
        "hero": {
          "size": "clamp(48px, 8vw, 80px)",
          "weight": "900",
          "line_height": "0.9",
          "letter_spacing": "-0.04em",
          "gradient_text": true
        },
        "h1": {
          "size": "clamp(36px, 5vw, 48px)",
          "weight": "800",
          "line_height": "1.1",
          "letter_spacing": "-0.03em"
