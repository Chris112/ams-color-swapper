          "border_radius": "24px",
          "padding": "32px",
          "position": "relative",
          "overflow": "hidden",
          "before": {
            "content": "''",
            "position": "absolute",
            "inset": "0",
            "background": "linear-gradient(135deg, #FF006E, #8338EC)",
            "opacity": "0",
            "transition": "opacity 0.3s ease"
          }
        },
        "data_card": {
          "background": "rgba(20, 20, 22, 0.8)",
          "border": "1px solid rgba(255, 255, 255, 0.05)",
          "border_radius": "16px",
          "padding": "24px",
