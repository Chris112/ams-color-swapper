        "border_radius": "24px",
        "backdrop_filter": "blur(10px)",
        "min_height": "400px",
        "hover": {
          "background": "rgba(255, 0, 110, 0.05)",
          "border_color": "#FF006E",
          "animation": "pulse-border 2s ease-in-out infinite"
