        "h2": {
          "size": "clamp(24px, 3vw, 32px)",
          "weight": "700",
          "line_height": "1.2",
          "letter_spacing": "-0.02em"
        },
        "h3": {
          "size": "clamp(18px, 2.5vw, 24px)",
          "weight": "600",
          "line_height": "1.3"
        },
        "body": {
          "size": "16px",
          "weight": "400",
          "line_height": "1.6",
